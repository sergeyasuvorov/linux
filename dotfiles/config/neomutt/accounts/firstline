set from = "sergey.suvorov@firstlinesoftware.com"
set sendmail = "/usr/bin/msmtp -a firstline"

# Set folders
set spoolfile = "+firstline/inbox"
set postponed = "+firstline/drafts"
set record = "+firstline/sent"
set trash = "+firstline/trash"

# custom signaure
#set signature = ~/.mutt/signatures/work

color status green default

macro index o "<shell-escape>mbsync firstline<enter>" "run mbsync to sync mail for this account"

macro index,pager s \
  "<save-message>+firstline/spam<enter>" \
  "mark as read and move to junk folder"

macro index,pager d \
  "<save-message>+firstline/trash<enter>" \
  "mark as read and move to trash folder"

#macro index,pager a \
#  "<save-message>+spam/archive<enter>"  \
#  "move message to the archive"

macro index,pager i \
  "<save-message>+firstline/inbox<enter>"  \
  "move message to the inbox"
