set from = "sergey.suvorov@odysseusinc.com"
set sendmail = "/usr/bin/msmtp -a odysseus"

# Set folders
set spoolfile = "+odysseus/inbox"
set postponed = "+odysseus/drafts"
set record = "+odysseus/sent"
set trash = "+odysseus/trash"

# custom signaure
#set signature = ~/.mutt/signatures/work

color status green default

macro index o "<shell-escape>mbsync odysseus<enter>" "run mbsync to sync mail for this account"

macro index,pager s \
  "<enter-command>set my_old_resolve=\$resolve noresolve<enter>\
  <tag-prefix><clear-flag>n<enter-command>set resolve=\$my_old_resolve<enter>\
  <save-message>+odysseus/spam<enter>" \
  "mark as read and move to junk folder"

#macro index,pager a \
#  "<save-message>+spam/archive<enter>"  \
#  "move message to the archive"

macro index,pager i \
  "<save-message>+odysseus/inbox<enter>"  \
  "move message to the inbox"
