set from = "sergeytn81@yandex.ru"
set sendmail = "/usr/bin/msmtp -a yandex"

# Set folders
set spoolfile = "+yandex/inbox"
set postponed = "+yandex/drafts"
set record = "+yandex/sent"
set trash = "+yandex/trash"

# custom signaure
#set signature = ~/.mutt/signatures/work

color status green default

macro index o "<shell-escape>mbsync yandex<enter>" "run mbsync to sync mail for this account"

macro index,pager s \
  "<save-message>+yandex/spam<enter>" \
  "mark as read and move to junk folder"

macro index,pager d \
  "<save-message>+yandex/trash<enter>" \
  "mark as read and move to trash folder"

#macro index,pager a \
#  "<save-message>+spam/archive<enter>"  \
#  "move message to the archive"

macro index,pager i \
  "<save-message>+yandex/inbox<enter>"  \
  "move message to the inbox"
